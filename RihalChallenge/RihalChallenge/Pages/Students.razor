@page "/students"

@using RihalChallenge.Client.Stores.StudentsStore
@inject IDispatcher Dispatcher
@inject IState<StudentsState> StudentState


<PageTitle>Students</PageTitle>

<h1>Students List</h1>

<table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Class</th>
                <th>Country</th>
                <th>Day of Birth</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var forecast in StudentState.Value.StudentsClientResponse.Students)
            {
                <tr>
                    <td>@forecast.Id</td>
                    <td>@forecast.StudentName</td>
                    <td>@forecast.ClassName</td>
                    <td>@forecast.CountryName</td>
                    <td>@forecast.DayOfBirth</td>
                </tr>
            }
        </tbody>
    </table>

@code {
    protected override void OnInitialized()
    {
        base.OnInitialized();
        Dispatcher.Dispatch(new GetStudentsAction());
    }

}
